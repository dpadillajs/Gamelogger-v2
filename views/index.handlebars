<div id="sticky-container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center">gamelogger</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header games-in-progress">
                        games in progress
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each videogames}}
                        {{#unless completed}}
                        <li class="list-group-item in-progress-item d-flex justify-content-between">
                            <i class="fab {{console}} fa-size"></i>
                            {{title}}
                            <i class="far fa-circle fa-size transfer" data-id="{{id}}" data-completed="{{completed}}"></i>
                        </li>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="col-sm-6 completed-games">
                <div class="card">
                    <div class="card-header completed">
                        completed
                    </div>
                    <ul class="list-group list-group-flush">
                        {{#each videogames}}
                        {{#if completed}}
                        <li class="list-group-item completed-item d-flex justify-content-between">
                            <i class="fab {{console}} fa-size"></i>
                            {{title}}
                            <i class="far fa-check-circle fa-size delete" data-id="{{id}}"></i>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <form>
            <div class="row my-3">
                <div class="col">
                    <label for="gamingPlatform" class="my-2">Console:</label>
                    <select class="form-control" id="gamingPlatform">
                        <option value="fa-nintendo-switch">Nintendo Switch</i></option>
                        <option value="fa-playstation">Playstation 4</option>
                        <option value="fa-xbox">Xbox One</option>
                    </select>
                    <small id="consoleTip" class="form-text text-muted">(ex. Nintendo Switch, Playstation 4,
                        etc.)</small>
                </div>
                <div class="col">
                    <label for="videogame" class="my-2">Videogame:</label>
                    <input type="text" class="form-control" id="videogame">
                    <small id="gameTip" class="form-text text-muted">Your videogame will be saved to the progress
                        section.</small>
                </div>
            </div>
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<div id="sticky-footer">
    <div>
        <p id="footer-text">&copy; Copyright 2018 - gamelogger, LLC.</p>
    </div>
</div>